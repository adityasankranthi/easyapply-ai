{
  "manifest_version": 3,
  "name": "EasyApply.ai Career Hub",
  "version": "1.0",
  "description": "Analyzes job descriptions and provides AI-powered application assistance.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/jobs/view/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
    }
  ]
}